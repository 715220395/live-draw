<Window x:Class="AntFu7.FreeDraw.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FreeDraw"
        mc:Ignorable="d" ResizeMode="NoResize" UseLayoutRounding="True" WindowStartupLocation="CenterScreen" WindowState="Maximized" Background="#02FFFFFF" AllowsTransparency="True" WindowStyle="None" Title="Free Draw Dev" Icon="Rescoures/icon.ico" >
    <Grid>
        <InkCanvas x:Name="MainInkCanvas" Background="{x:Null}" MoveEnabled="False" ResizeEnabled="False">
            <InkCanvas.DefaultDrawingAttributes>
                <DrawingAttributes Color="#FFFF5656" FitToCurve="True" Height="5" IgnorePressure="False" IsHighlighter="False" StylusTip="Ellipse" StylusTipTransform="Identity" Width="5"/>
            </InkCanvas.DefaultDrawingAttributes>
        </InkCanvas>
        <Canvas>
            <Grid x:Name="Palette" HorizontalAlignment="Left" VerticalAlignment="Top" Width="280" MouseMove="Palette_MouseMove" MouseUp="Palette_MouseUp" MouseLeave="Palette_MouseLeave" Canvas.Top="15" Canvas.Left="15">
                <Grid HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,50,0,0" >
                    <Border x:Name="PaletteGrip" Background="#99595959" Width="80" Height="20" CornerRadius="5" Cursor="SizeAll" MouseDown="PaletteGrip_MouseDown"  HorizontalAlignment="Left" Margin="0,0,30,0" ></Border>
                    <Border x:Name="CloseButton" Background="#CCFF7774" Width="20" Height="20" CornerRadius="5" Cursor="No" HorizontalAlignment="Right" MouseDown="CloseButton_MouseDown" ></Border>
                </Grid>
                <WrapPanel HorizontalAlignment="Center" VerticalAlignment="Center" Margin="50,75,50,50">
                    <WrapPanel.Effect>
                        <DropShadowEffect BlurRadius="10" ShadowDepth="5" Opacity="0.5"/>
                    </WrapPanel.Effect>
                    <Border Width="40" Height="40" Background="#FFAEE238" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FF38E2A8" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border x:Name="DefaultColor" Width="40" Height="40" Background="#FF359EC9" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"/>
                    <Border Width="40" Height="40" Background="#FFE2C638" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FFE28C38" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FFE25738" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FF7855D4" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FFD570C2" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FFE03030" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FF1E1E1E" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FF7E7E7E" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="White"></Border>
                    <Border Width="40" Height="40" Background="#FFD6D6D6" CornerRadius="15" Margin="5" MouseDown="ColorSelector_MouseDown" Cursor="Pen" BorderBrush="Black"></Border>
                    <Grid Width="150">
                        <Border Background="#4C727272" HorizontalAlignment="Right" VerticalAlignment="Center" Width="20" Height="20" Margin="0,0,5,0" CornerRadius="3">
                            <Border x:Name="brushPreview" Width="5" Height="5" Background="#FFD6D6D6" CornerRadius="15"  HorizontalAlignment="Center" VerticalAlignment="Center"></Border>
                        </Border>
                        <Slider Margin="5,15,30,15" Minimum="1" SmallChange="0.2" Value="5" ValueChanged="Slider_ValueChanged" LargeChange="0.5" IsMoveToPointEnabled="True" IsSelectionRangeEnabled="True" Focusable="False" RenderTransformOrigin="0.5,0.5" VerticalAlignment="Center" />
                    </Grid>
                    <Border Width="30" Height="30" CornerRadius="10" Margin="4"  BorderThickness="1" BorderBrush="White" Background="#4C000000">
                        <TextBlock Text="&lt;" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18.667" FontFamily="Consolas" Margin="0,0,0,2"/>
                    </Border>
                    <Border Width="30" Height="30" CornerRadius="10" Margin="4" BorderThickness="1" BorderBrush="White" Background="#4C000000">
                        <TextBlock Text="&gt;" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18.667" FontFamily="Consolas" Margin="0,0,0,2"/>
                    </Border>
                    <Border Width="30" Height="30" CornerRadius="10" Margin="4"  BorderThickness="1" BorderBrush="White" Background="#4C000000">
                        <TextBlock Text="C" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18.667" FontFamily="Consolas" Margin="0,0,0,2"/>
                    </Border>
                    <Border Width="30" Height="30" CornerRadius="10" Margin="4"  BorderThickness="1" BorderBrush="White" Background="#4C000000">
                        <TextBlock Text="S" Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="18.667" FontFamily="Consolas" Margin="0,0,0,2"/>
                    </Border>
                </WrapPanel>
            </Grid>
        </Canvas>
    </Grid>
</Window>
